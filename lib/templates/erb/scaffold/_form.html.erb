<%= simple_form_for @product do |f| %>
  <%= f.error_message %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :pricing %>

  <div class="form-inputs">
  <%- attributes.each do |attribute| -%>
    <%%= f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %> %>
  <%- end -%>
  </div>

  <div class="form-actions">
    <%%= f.button :submit %>
  </div>
<%% end %>
